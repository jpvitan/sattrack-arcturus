<div class="account screen background-color background-color-white d-none" id="account">
    <div class="container-fluid px-4 py-4">
        <div class="row">
            <div class="col-auto">
                <button class="button-icon button-icon-black btn" id="account-close-button">
                    <%- include("../../icons/close") %>
                </button>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="content-xs col">
                <p class="text-size-lg text-color-black fw-bold mb-1">Account</p>
                <p class="text-size-sm">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde ipsam corrupti molestiae distinctio minus mollitia magnam et.</p>
                <div class="py-4">
                    <p class="text-size-md text-color-black fw-bold mb-1">Contact Information</p>
                    <div class="py-2">
                        <p class="text-size-sm mb-1">Email</p>
                        <%- include("../../forms/field", { attributes: { id: '', type: 'email', value: user.email, required: 'required' } }) %>
                    </div>
                </div>
                <div class="py-4">
                    <p class="text-size-md text-color-black fw-bold mb-1">Account Security</p>
                    <div class="py-2">
                        <p class="text-size-sm mb-1">Username</p>
                        <%- include("../../forms/field", { attributes: { id: '', type: 'text', value: user.username, required: 'required', disabled: 'disabled' } }) %>
                    </div>
                </div>
                <div class="py-4">
                    <p class="text-size-md text-color-black fw-bold mb-1">Personal Information</p>
                    <div class="py-2">
                        <p class="text-size-sm mb-1">Name</p>
                        <%- include("../../forms/field", { attributes: { id: '', type: 'text', value: user.name, required: 'required' } }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/layout/head") %>
</head>

<body id="console" class="console theme-light">
    <%- include("../partials/pages/console/satellite") %>
    <main>
        <section>
            <div class="container-fluid px-3 px-md-4 py-3">
                <div class="row justify-content-center">
                    <div class="content-lg col">
                        <div class="row">
                            <div class="col-auto my-auto">
                                <img id="account-button" class="cursor-pointer" alt="Picture" src="https://res.cloudinary.com/dhv9gcew6/image/upload/q_auto/v1697194211/sattrack-arcturus/icons/profile_v0kdmy.png" width="30" height="30">
                            </div>
                            <div class="col-auto my-auto">
                                <p class="text-size-sm text-color-black mb-0"><%= user.name %></p>
                                <p class="text-size-xs text-color-orange mb-0">Administrator</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="mt-3">
            <div class="container-fluid px-3 px-md-4 py-3">
                <div class="row justify-content-center">
                    <div class="content-lg col">
                        <div class="row justify-content-center">
                            <%- include("../partials/forms/item", { id: 'satellite-button', title: 'Satellite', icon: 'https://res.cloudinary.com/dhv9gcew6/image/upload/q_auto/v1698167217/sattrack-arcturus/icons/antenna_kqnsu1.png' }) %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="filler"></div>
    </main>
    <%- include("../partials/layout/footer") %>
</body>

</html>